@using WebEstadiaHot.UsuarioActual

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link href="~/Content/novoLook.css" rel="stylesheet" />

    <title>Hotel Buya | @ViewBag.Title</title>

</head>

<body>

    @{
        if (DadosUsuarioActual.EstadoAutenticacao != 0 && DadosUsuarioActual.Cod_AcessoTipo == 1)
        {
            @Html.Partial("_menuAdmin")
        }
        else if (DadosUsuarioActual.EstadoAutenticacao != 0 && DadosUsuarioActual.Cod_AcessoTipo == 3)
        {
            @Html.Partial("_menu")
        }
    }

    @*<div class="">
        @RenderBody()
    </div>*@

    <div class="jumbotron">
        <div class="container-fluid">
            <div class="row">
                @*<article class="col-md-4">
                    <h1>Aviso!</h1>
                    <p>
                        Está página é temporária <br />
                        Estamos a fazer algumas actualizações no sistema <br />
                        Obrigado pela compreensão.
                    </p>
                </article>*@

                <aside class="col-md-12">
                    @RenderBody()
                </aside>
                <hr />
            </div>
        </div>
    </div>

    <footer class="footer bg-danger footer-custom">
        <div class="container">
            <span class="text-muted">&copy;@DateTime.Now.Year BUYA Apps</span>
        </div>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/custom.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
