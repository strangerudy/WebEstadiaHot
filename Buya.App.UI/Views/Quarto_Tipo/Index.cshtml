@model IEnumerable<Buya.App.UI.Models.Quarto_Tipo>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_AcessoPartial.cshtml";
}

<p class="botaolink">
    @Html.ActionLink("Inserir Novo", "Create")
</p>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="tabelacabecalho">
                <th>Tipo de Quarto</th>
                <th>Preço</th>
                <th>Operações</th>
            </tr>
        </thead>

        <tbody>
           
            @foreach (var item in Model)
            {
                <tr class="tabelacorpo">
                    <td class="">@Html.DisplayFor(modelItem => item.Quarto_Tipo_Descricao)</td>

                    <td>@Html.DisplayFor(modelItem => item.Valor_Tipo_Quarto)</td>


                    <td class="tabelaCorpoOperacoes">
                        @Html.ActionLink("Alterar", "Edit", new { id = item.Id_Quarto_Tipo }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Quarto_Tipo }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Quarto_Tipo })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>