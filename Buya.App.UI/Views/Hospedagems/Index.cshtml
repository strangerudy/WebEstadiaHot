@model IEnumerable<Buya.App.UI.Models.Hospedagem>

@{
    ViewBag.Title = "Hospedes";
    //Layout = "~/Views/Shared/_AcessoPartial.cshtml";
}

<h2>@ViewBag.Title</h2>


<p class="botaolink">
    @Html.ActionLink("Ver reservas", "Index", "Reservas")
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="tabelacabecalho">
                <th>Nome do Cliente</th>
                <th>Quarto</th>
                <th>Data de CheckIn</th>
                <th>Data de CheckOut</th>
                <th>Operações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tabelacorpo">
                    <td class="">@Html.DisplayFor(modelItem => item.Reserva.Cliente.Acesso.Email)</td>

                    <td>@Html.DisplayFor(modelItem => item.Reserva.Quarto.Descricao)</td>

                    <td>@Html.DisplayFor(modelItem => item.Data_CheckIn)</td>

                    <td>@Html.DisplayFor(modelItem => item.Data_CheckOut)</td>

                    <td class="tabelaCorpoOperacoes">
                        @Html.ActionLink("CheckOut", "CheckOut", new { id = item.Id_Hospedagem }) |
                        @Html.ActionLink("Alterar", "Edit", new { id = item.Id_Hospedagem }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Hospedagem }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Hospedagem })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>