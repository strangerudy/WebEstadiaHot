@model IEnumerable<Buya.App.UI.Models.Quarto>

@{
    ViewBag.Title = "Lista dos Quartos";
    //Layout = "~/Views/Shared/_AcessoPartial.cshtml";
}

<h2>Lista dos Quartos</h2>

<p class="botaolink">
    @Html.ActionLink("Novo Quarto", "Create")
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="tabelacabecalho">
                <th>Descrição do Quarto</th>
                <th>Tipo de Quarto</th>
                <th>Estado</th>
                <th>Operações</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr class="tabelacorpo">
                    <td class="">@Html.DisplayFor(modelItem => item.Descricao)</td>

                    <td class="">@Html.DisplayFor(modelItem => item.Quarto_Tipo.Quarto_Tipo_Descricao)</td>

                    <td>@Html.DisplayFor(modelItem => item.Estado_Quarto.Estado_Quarto1)</td>

                    <td class="tabelaCorpoOperacoes">
                        @Html.ActionLink("Alterar", "Edit", new { id = item.Id_Quarto_Tipo }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Quarto_Tipo }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Quarto_Tipo })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>