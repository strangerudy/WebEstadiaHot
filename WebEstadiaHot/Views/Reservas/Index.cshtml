@model IEnumerable<WebEstadiaHot.Models.ReservasViewModel>

@*@model IQueryable<WebEstadiaHot.Models.Reserva>*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AcessoPartial.cshtml";
}

<h2>Reservas</h2>



@using (Html.BeginForm("Index", "Reservas", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Email do usuário", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-offset-2 col-md-10">
            @Html.Editor("parametroBD", new { htmlAttributes = new { @class = "caixaTexto" } })
            <input type="submit" value="Pesquisar" class="btn btn-danger" />

        </div>
    </div>

    @*<div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Consultar" class="btn btn-danger" />
        </div>
    </div>*@

}

<p class="botaolink">
    @Html.ActionLink("Nova Reserva", "Create")
</p>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="tabelacabecalho">
                <th>Nome do Cliente</th>
                <th>Quarto</th>
                <th>Data de CheckIn</th>
                <th>Data de CheckOut</th>
                <th>Operações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tabelacorpo">
                    <td class="">@Html.DisplayFor(modelItem => item.Email)</td>

                    <td>@Html.DisplayFor(modelItem => item.Quarto_Tipo_Descricao)</td>

                    <td>@Html.DisplayFor(modelItem => item.Data_Reserva)</td>

                    <td>@Html.DisplayFor(modelItem => item.Data_Entrada)</td>

                    <td class="tabelaCorpoOperacoes">
                        @Html.ActionLink("CheckIn", "CheckIn", new { id = item.Id_Reserva }) |
                        @Html.ActionLink("Alterar", "Edit", new { id = item.Id_Reserva }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Reserva }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Reserva })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>